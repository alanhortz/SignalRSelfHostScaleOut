                  <Parameter Name="EncryptionPassword" Value="[EncryptionPassword]" />
               </Section>
            </Settings>
         </ConfigOverride>
      </ConfigOverrides>
   </ServiceManifestImport>
   <DefaultServices>
      <Service Name="SignalRHost">
         <StatelessService ServiceTypeName="SignalRHostType" InstanceCount="[SignalRHost_InstanceCount]">
            <SingletonPartition />
         </StatelessService>
      </Service>
   </DefaultServices>
</ApplicationManifest>