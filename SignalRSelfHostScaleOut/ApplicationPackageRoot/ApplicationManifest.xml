         <ConfigOverride Name="Config">
            <Settings>
               <Section Name="SignalRScaleout">
                  <Parameter Name="UseScaleout" Value="[UseScaleout]" />
                  <Parameter Name="RedisConnectionString" Value="[RedisConnectionString]" />
